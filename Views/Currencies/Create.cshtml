@model BankManagementSystem.Models.Currencies

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Currencies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="short_name" class="control-label"></label>
                <input asp-for="short_name" class="form-control" />
                <span asp-validation-for="short_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currency_exchange_id" class="control-label"></label>
                <select asp-for="currency_exchange_id" class ="form-control" asp-items="ViewBag.currency_exchange_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="bank_total_balance_id" class="control-label"></label>
                <select asp-for="bank_total_balance_id" class ="form-control" asp-items="ViewBag.bank_total_balance_id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
